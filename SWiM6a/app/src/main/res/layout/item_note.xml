<?xml version="1.0" encoding="utf-8"?>
<com.company.swim6a.layouts.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckedTextView
        android:id="@+id/somthing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/notePauseButtonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/baseline_pause_black_18dp" />

    <ImageView
        android:id="@+id/notePlayButtonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/baseline_play_arrow_black_18dp" />

    <TextView
        android:id="@+id/noteTitleTextView"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notePlayButtonImage"
        android:text="TytuÅ‚"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/noteAuthorTextView"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noteTitleTextView"
        android:layout_toEndOf="@+id/notePlayButtonImage"
        android:text="Autor" />

    <TextView
        android:id="@+id/noteDateTextView"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/noteTitleTextView"
        android:text="Data" />

    <TextView
        android:id="@+id/noteDescriptionTextView"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_below="@+id/noteAuthorTextView"
        android:layout_toEndOf="@+id/notePlayButtonImage"
        android:text="Opis"
        android:textSize="8sp" />

</com.company.swim6a.layouts.CheckableRelativeLayout>
